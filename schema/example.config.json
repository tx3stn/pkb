{
	"$schema": "https://raw.githubusercontent.com/tx3stn/pkb/main/schema/config.json",
	"directory": "testdata/output",
	"editor": "nvim",
	"ignore_dirs": [
		".git",
		".obsidian",
		"templates"
	],
	"ignore_files": [
		".gitignore"
	],
	"template_dir": "templates",
	"templates": {
		"daily": {
			"file": "daily.md",
			"name_format": "{{.Date}}",
			"output_dir": "daily/{{.Year}}",
			"custom_date_format": "Monday 2nd January 2006"
		},
		"minutes": {
			"output_dir": "work/bar",
			"sub_templates": {
				"minutes": {
					"file": "minutes.md",
					"output_dir": "{{.Prompt}}"
				},
				"project": {
					"file": "projects.md",
					"output_dir": "{{.Select}}"
				}
			}
		}
	}
}
