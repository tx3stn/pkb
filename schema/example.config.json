{
	"$schema": "https://raw.githubusercontent.com/tx3stn/pkb/main/schema/config.json",
	"directory": "testdata/output",
	"editor": "nvim",
	"template_dir": "templates",
	"templates": {
		"daily": {
			"file": "daily.md",
			"name_format": "{{.Date}}",
			"output_dir": "daily",
			"custom_date_format": "Monday 2nd January 2006"
		},
		"interview": {
			"file": "interview.md",
			"output_dir": "interviews",
			"sub_templates": {
				"back-end": {
					"file": "interview.back-end.md",
					"custom_date_format": "Monday 2nd January",
					"output_dir": "back-end"
				},
				"front-end": {
					"file": "interview.front-end.md",
					"output_dir": "front-end"
				}
			}
		},
		"projects": {
			"output_dir": "work/bar",
			"sub_templates": {
				"misc": {
					"file": "projects.misc.md",
					"output_dir": "{{.Prompt}}"
				},
				"minutes": {
					"file": "minutes.md",
					"output_dir": "{{.Prompt}}"
				}
			}
		}
	}
}
